<!--pages/home/home.wxml-->

<view class='section'>

<!--顶部条幅-->
  <view class='banner'>
    <swiper
    indicator-dots='{{indicatordots}}'
    autoplay='{{autoplay}}'
    interval='{{interval}}'
    duration='{{duration}}'
    >
     <block wx:for="{{bannerUrl}}" wx:key="item.id">
       <swiper-item>
        <image src='{{item}}' mode='scaleToFill'></image>
      </swiper-item>
     </block>
    </swiper>
  </view>

<!--左侧菜单-->
  <view class='foodlist-left-menu'>
    <view wx:for="{{leftname}}" wx:key="item.id" class="{{index==activeIndex? 'foodlist-left-menu-selected':'foodlist-left-menu-unselected'}}">
     <view class='foodlist-left-menu-name'>{{item}}</view>
    </view>
  </view>

<!--右侧菜单-->
  <view class='foodlist-right'>
    <scroll-view
    scroll-y='true'
    style='height:100%'
    >
      111
    </scroll-view>
  </view>

  <!--提交订单-->
  <view class='order-view' style="display{{modalHidden? 'flex':'none'}};">
    <view class='order-number'>
      <image class='cart' src='../../images/cart.png' mode='scaleToFill'></image>
      <span class='order-number-text'>5</span>
      <span>￥{{totalCost}}</span>
    </view>
    <view class='submit-order' bindtap='submitclick'>提交订单</view>
  </view>
  
</view>
