<!--pages/home/home.wxml-->

<view class='section'>

<!--顶部条幅-->
  <view class='banner'>
    <swiper
    indicator-dots='{{indicatordots}}'
    autoplay='{{autoplay}}'
    interval='{{interval}}'
    duration='{{duration}}'
    >
     <block wx:for="{{bannerUrl}}" wx:key="item.id">
       <swiper-item>
        <image src='{{item}}' mode='scaleToFill'></image>
      </swiper-item>
     </block>
    </swiper>
  </view>

<!--左侧菜单-->
  <view class='foodlist-left-menu'>
    <view wx:for="{{leftname}}" wx:key="item.id" class="{{index==activeIndex? 'foodlist-left-menu-selected':'foodlist-left-menu-unselected'}}" data-index="{{index}}" bindtap='selectMenu'>
     <view class='foodlist-left-menu-name'>{{item}}</view>
    </view>
  </view>

<!--右侧菜单-->
  <scroll-view scroll-y='true' style='height:1200rpx' bindscroll='scroll' scroll-into-view='{{toView}}' scroll-top='{{scrollTop}}'>
    <view class='content' id='a{{index}}' wx:for='{{foodlistData}}' wx:key='unique'>
      <view class='list-tab'>{{item.name}}</view>
      <view class='content-list' wx:for='{{item.foods}}' wx:key='unique' wx:for-item='items' wx:key-index='indexs'>
        <view class='list-image-box'>
        <image class='list-image' mode='scaleToFill' src='{{items.image_url}}'></image>
        <view>
          <view class='issue-name'>
            <view>{{items.name}}</view>
            <view style='margin-top;20rpx;color:#f05a86'>
              ￥{{items.specfoods[0].price}}.00
              <icon class='plus-icon' data-type='{{index}}' data-index='{{indexs}}' bindtap='selectInfo'></icon>
            </view>
          </view>
        </view>
        </view>
      </view>
    </view>
  </scroll-view>


  <!--加入购物车提示-->
  <!--toast hidden="{{toastHidden}}">已加入购物车</toast>

  <!--提交订单-->
  <view class='order-view' style="display{{modalHidden? 'flex':'none'}};">
    <view class='order-number'>
      <image class='cart' src='../../images/cart.png' mode='scaleToFill'></image>
      <span class='order-number-text'>{{orderNumber}}</span>
      <span class='cost' wx:if="{{totalCost==0}}">购物车是空的</span>
      <span class='cost' wx:if="{{totalCost!=0}}">￥{{totalCost}}</span>
    </view>
    <view class='submit-order' bindtap='submitClick'>提交订单</view>
  </view>
  
</view>